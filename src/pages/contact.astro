---
import '../styles/contact.css';
---


<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Contact Me</title>
    <link rel="icon" type="image/x-icon" href="../public/selfie.jpg">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css"
  />
</head>
<body>
    <div class="container">
      <div>
        <h1 class="animate__backInLeft">Contact Me</h1>
      </div>
        <form class="animate__bounceIn form" id="form" action="https://formspree.io/f/mjvzkqjl"
    method="post">
    <div>
       <label for="name">Name</label>
       <input type="text" name="name" required>
    </div>
    <div>
       <label for="email">Email</label>
       <input type="email" name="email" required>
    </div>
    <div>
        <label for="message">Message</label>
        <textarea name="message" id="message" cols="12]" rows="10" required></textarea>
    </div>
    <div class="captcha">
      <p>Are you Human?</p>
      <label for="yes">Yes</label>
      <input required type="checkbox" id="yes" name="captcha" value="yes">
      <label for="no">No</label>
      <input type="checkbox" id="no" name="captcha" value="no">
    </div>
    <button type="submit">Send form</button>
</form>
<ul class="list">
  <li class="animate__bounce"><a href="/" class="link">Home</a></li>
  <li class="animate__bounce"><a href="/about/" class="link">About</a></li>
  <li class="animate__bounce"><a href="/projects/" class="link">Projects</a></li>
</ul>
</div>
</body>
</html>