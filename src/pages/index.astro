---
import '../styles/index.css'
import selfie from '../public/selfie.jpg'
import linkedIn from '../public/linkedIn.png'
import youtube from '../public/Youtube.png'
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>Steven's Website</title>
  		<link
		rel="stylesheet"
		href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css"
		/>
  		<link rel="icon" type="image/x-icon" href={selfie}>
		<title>Astro</title>
	</head>
	<body>
		<div class="container">
		  <div class="box1">
		  <div class="center-text animate__backInLeft">
			Hi, I am Steven Perez, I like to build websites.
		  </div>
			<div class="footer">
			  <ul>
				<li class="animate__bounce"><a href="./about/" class="link">About</a></li>
				<li class="animate__bounce"><a href="./projects/" class="link">Projects</a></li>
				<li class="animate__bounce"><a href="./contact/" class="link">Contact</a></li>
			</ul>
		  </div>
		  <div class="social">
			<div class="icons">
			  <a class="social-links" href="https://www.linkedin.com/in/stevenalp18/">
			  <img class="img1" src={linkedIn} alt="linkedIn">
			</a>
			</div>
			<div class="icons">
			  <a class="social-links" href="https://www.youtube.com/channel/UCNvX216O08aIcdtcbxD7oLQ">
			  <img class="img2"src={youtube} alt="Youtube">
			</a>
			</div>
		  </div>
		</div>
	  </div>
		<script type="text/javascript" href="script.js"></script>
	  </body>
	  </html>
	  
